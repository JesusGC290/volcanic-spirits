---
// src/components/Footer.astro
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import logoWhite from "../assets/logo-volcanic-white.png";

interface Props {
  content: {
    brandName: string;
    copyright: string;
    responsible_drinking: string;
  };
}
const { content } = Astro.props;
---

<footer class="bg-text">
  <div class="max-w-7xl mx-auto py-12 px-6 lg:px-8 text-background">
    <div class="flex flex-col md:flex-row justify-between items-center space-y-8 md:space-y-0">
      <a href="#" class="block h-12 w-auto">
        <Image src={logoWhite} alt="Volcanic Spirits Logo" quality="high" class="h-full w-auto" />
      </a>

      <div class="flex space-x-6">
        <a
          href="https://www.instagram.com/volcanic.spirits"
          target="_blank"
          class="text-background/70 hover:text-primary transition-colors"
          aria-label="Instagram"
        >
          <Icon name="simple-icons:instagram" class="w-6 h-6" />
        </a>
      </div>
    </div>

    <div class="mt-12 border-t border-accent/20"></div>

    <div class="mt-8 flex ...">
      <p>&copy; {new Date().getFullYear()} {content.brandName}. {content.copyright}</p>
      <p class="font-bold">{content.responsible_drinking}</p>
    </div>
  </div>
</footer>
