---
// src/components/Hero.astro
import { Image } from "astro:assets";
import heroBgImage from "../assets/images/hero.jpg";

interface Props {
  content: {
    title: string;
    subtitle: string;
    cta_button: string;
  };
}

const { content } = Astro.props;
---

<section>
  <div class="hidden md:block relative h-screen">
    <Image
      src={heroBgImage}
      alt="Bottle of Tequila on a rocky landscape"
      quality="high"
      class="absolute inset-0 w-full h-full object-cover z-0"
    />
    <div class="absolute inset-0 w-3/4 bg-gradient-to-r from-black/90 to-transparent z-10"></div>
    <div class="relative h-full flex items-center z-20">
      <div class="max-w-xl text-left pl-8 sm:pl-12 lg:pl-24">
        <h1 class="font-display text-5xl lg:text-7xl font-bold tracking-tight uppercase text-white animate-on-scroll">
          {content.title}
        </h1>
        <p class="font-body mt-4 text-lg lg:text-xl max-w-lg text-gray-200 animate-on-scroll">
          {content.subtitle}
        </p>
        <a
          href="#portfolio"
          class="mt-8 inline-block bg-primary text-background font-body font-bold uppercase tracking-wider py-3 px-8 rounded-md hover:brightness-95 transition-transform duration-300 active:scale-95 animate-on-scroll"
        >
          {content.cta_button}
        </a>
      </div>
    </div>
  </div>

  <div class="block md:hidden">
    <div class="h-96">
      <Image src={heroBgImage} alt="Bottle of Tequila" quality="mid" class="w-full h-full object-cover" />
    </div>
    <div class="bg-background text-center pt-12 px-6">
      <h1 class="font-display text-4xl font-bold tracking-tight uppercase text-text animate-on-scroll">
        {content.title}
      </h1>
      <p class="font-body mt-4 text-lg max-w-md mx-auto text-text/80 animate-on-scroll">
        {content.subtitle}
      </p>
      <a
        href="#portfolio"
        class="mt-8 inline-block bg-primary text-background font-body font-bold uppercase tracking-wider py-3 px-8 rounded-md hover:brightness-95 transition-transform duration-300 active:scale-95 animate-on-scroll"
      >
        {content.cta_button}
      </a>
    </div>
  </div>
</section>
