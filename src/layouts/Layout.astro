---
// src/layouts/Layout.astro
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

// 1. Añadimos una nueva propiedad 'footerContent'
interface Props {
  title: string;
  lang: "en" | "es";
  footerContent: any; // Usamos 'any' por simplicidad, podría ser más específico
}
const { title, lang, footerContent } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Volcanic Spirits - El espíritu del volcán, destilado." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Kaisei+Opti&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-background text-text font-body antialiased">
    <Header />
    <slot />
    <Footer content={footerContent} />
    <script>
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      // Animación genérica para elementos que aparecen con el scroll
      const animatedElements = document.querySelectorAll(".animate-on-scroll");

      animatedElements.forEach((element) => {
        gsap.from(element, {
          opacity: 0,
          y: 50, // Empieza 50px más abajo
          duration: 0.8,
          ease: "power3.out",
          scrollTrigger: {
            trigger: element,
            start: "top 85%", // La animación empieza cuando el 85% del elemento es visible
            toggleActions: "play none none none", // La animación solo se ejecuta una vez
          },
        });
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
